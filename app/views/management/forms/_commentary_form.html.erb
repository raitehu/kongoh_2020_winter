<%= form_with(model: commentary, local: true, url: view.post_url, method: 'post') do | form | %>
  <div class="field">
    <%= form.label :heading, '段落タイトル ※必須' %>
    <%= form.text_field :heading %>
    <br>
    <%= form.label :content, 'コンテンツ ※必須' %>
    <%= form.text_area :content %>
    <br>
    <%= form.label :priority, '優先度' %>
    <%= form.number_field :priority %>
    <br>
    <%= form.submit %>
  </div>
<% end %>
