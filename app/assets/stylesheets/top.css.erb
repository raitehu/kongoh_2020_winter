.container{
    width: 100%;
    padding: 0px 5% 0px;
}

.headline_topics{
    text-align: center;
}

.top-contact_area{
    text-align: center;
    margin: 80px auto;
}

.top-contact_area .contact_content{
    margin-top: 10px;
}

.mail{
    margin: 20px auto;
    max-width: 400px;
    width: 100%;
    height: 60px;
    background-color: #F6D4D8;
    text-align: center;
}

.mail a{
    padding: 17px;
    display: block;
}

.mail a::before{
    content: '';
    background: url('<%= asset_path 'ic_mail.png' %>') no-repeat;
    background-size: 25px;
    display: inline-block;
    height: 25px;
    width: 25px;
    vertical-align: middle;
    margin: auto 10px 3px;
}

.sns{
    margin: 20px auto;
    max-width: 400px;
    width: 100%;
    height: 60px;
    background-color: #FFFFFF;
    border: 1px solid #000000;
    text-align: center;
}

.sns a{
    padding: 17px;
    display: block;
}

